<html>
<head>
    <title>Tracks</title>
</head>
<body>
<h1>Tracks</h1>
<a href="/track/add">Add New Tracks</a> <br />

<br />
<table border="1">
    <tr><th>Song Title</th><th>Duration</th><th>Action</th>
        <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/track/?position=<%= result[i].position %>"><%= result[i].title%></a></td>
        <td><%= result[i].duration %></td>
        <td><form action="/track/delete/">
                <input type="hidden" name="position" id="position" value="<%= result[i].position %>" />
                <input type="submit" value="Delete"/>
        </form>
        </td>
    </tr>
    <% } %>
</table>

